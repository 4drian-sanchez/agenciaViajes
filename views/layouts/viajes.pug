.row 
    each viaje in viajes 
        .col-md-6.col-lg-4.mb-4 
            .card
                img(src=`./img/destinos_${viaje.imagen}.jpg`, alt=`Imagen del viaje ${viaje.titulo}` class="card-img-top")
                .card-body
                    h2 #{viaje.titulo}
                    div.d-flex.align-items-center.mb-3
                        svg.icon.icon-tabler.icon-tabler-calendar-time(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#DC135F' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            path(d='M11.795 21h-6.795a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v4')
                            path(d='M18 18m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0')
                            path(d='M15 3v4')
                            path(d='M7 3v4')
                            path(d='M3 11h16')
                            path(d='M18 16.496v1.504l1 1')
                        span(
                            style= "font-size: 14px; font-weight: bold;"
                        ).ml-2 Ida: #{dateFormatter(viaje.fecha_ida)}     

                    div.d-flex.align-items-center.mb-3
                        svg.icon.icon-tabler.icon-tabler-calendar-stats(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#DC135F' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            path(d='M11.795 21h-6.795a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v4')
                            path(d='M18 14v4h4')
                            path(d='M18 18m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0')
                            path(d='M15 3v4')
                            path(d='M7 3v4')
                            path(d='M3 11h16')
                        span(
                                style= "font-size: 14px; font-weight: bold;"
                        ).ml-2 Vuelta #{dateFormatter(viaje.fecha_vuelta)}
                    p(
                        style= "font-size: 14px; font-weight: bold;"
                    )
                        svg.icon.icon-tabler.icon-tabler-users-group(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#DC135F' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            path(d='M10 13a2 2 0 1 0 4 0a2 2 0 0 0 -4 0')
                            path(d='M8 21v-1a2 2 0 0 1 2 -2h4a2 2 0 0 1 2 2v1')
                            path(d='M15 5a2 2 0 1 0 4 0a2 2 0 0 0 -4 0')
                            path(d='M17 10h2a2 2 0 0 1 2 2v1')
                            path(d='M5 5a2 2 0 1 0 4 0a2 2 0 0 0 -4 0')
                            path(d='M3 13v-1a2 2 0 0 1 2 -2h2')

                        span.ml-2 Disponibles: #{viaje.disponibles}
                    p #{viaje.descripcion.substr(0, 100) + '...'}
                    a(href=`viaje/${viaje.slug}` class="btn btn-block btn-success") Más información